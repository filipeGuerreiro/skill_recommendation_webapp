<li id="skill-<%= skill.id %>">
  <span class="content">
    <% if current_user != @user && !@recommendations_given.exists?(:user_id => current_user.id, :skill_id => skill.id) %>
      <%= link_to "#{skill.recommendations} - #{skill.name}", 
	        '/recommendations?' + {user_id: current_user.id, skill_id: skill.id}.to_param, method: :post %>
	<% else %>
	  <%= skill.recommendations %> - <%= skill.name %>
    <% end %>
  </span>
</li>